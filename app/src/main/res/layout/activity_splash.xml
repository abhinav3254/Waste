<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="#E86A33"
    tools:context=".splash">

    <ImageView
        android:id="@+id/imageCloud"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/cloud_service_svgrepo_com"
        android:layout_marginLeft="40dp"
        />

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/self_driving_car_innovation_autonomous_vehicle_self_driving_car_svgrepo_com"
        />

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="40sp"
        android:textColor="#FDFF00"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/bungee_shade"
        />

    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Money Saver Application"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/archivo_narrow_italic"
        android:textColor="#FDFF00"
        />

</LinearLayout>